  "debug.inlineValues": "on",
  "git.openRepositoryInParentFolders": "never",
  "[html]": {
    "editor.defaultFormatter": "mohd-akram.vscode-html-format"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "keyboard.dispatch": "keyCode",
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "explorer.confirmDelete": false,
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "git.confirmSync": false,
  "chat.commandCenter.enabled": false,
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "windowed",
  "workbench.preferredHighContrastLightColorTheme": "Nord Deep",
  "terminal.integrated.defaultProfile.osx": "bash"
  , 

  "markdown-preview-enhanced.exportPDFPath": "chrome",
  "markdown-preview-enhanced.enablePreviewZenMode": false

}
